<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"

    android:layout_height="match_parent"

    android:layout_centerHorizontal="false"

    android:layout_centerVertical="false"

    android:paddingBottom="@dimen/activity_vertical_margin"

    android:paddingLeft="@dimen/activity_horizontal_margin"

    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="bestcase.capp.DataInput">


    <TextView
        android:id="@+id/velocity_0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/results"
        android:layout_marginTop="19dp"
        android:text="Initial Velocity"
        android:textAlignment="center"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <Button
        android:id="@+id/back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BACK"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/unit1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:text="m/s"
        android:textAlignment="center"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_alignBaseline="@+id/velocity_0"
        android:layout_alignBottom="@+id/velocity_0"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/velocity_0_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Initial Velocity"
        android:textAlignment="textEnd"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_alignBaseline="@+id/velocity_0"
        android:layout_alignBottom="@+id/velocity_0"
        android:layout_toStartOf="@+id/unit1" />

    <TextView
        android:id="@+id/velocity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Velocity"
        android:textAlignment="center"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_below="@+id/velocity_0"
        android:layout_alignParentStart="true"
        android:layout_marginTop="28dp" />

    <TextView
        android:id="@+id/velocity_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="velocity"
        android:textAlignment="textEnd"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_alignBaseline="@+id/velocity"
        android:layout_alignBottom="@+id/velocity"
        android:layout_alignStart="@+id/velocity_0_num" />

    <TextView
        android:id="@+id/accel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Acceleration"
        android:textAlignment="center"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_marginTop="27dp"
        android:layout_below="@+id/velocity"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/unit2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"

        android:text="m/s^2"
        android:textAlignment="center"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_alignBaseline="@+id/accel"
        android:layout_alignBottom="@+id/accel"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/accel_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Accel"
        android:textAlignment="textEnd"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_alignBaseline="@+id/accel"
        android:layout_alignBottom="@+id/accel"
        android:layout_alignStart="@+id/velocity_num" />

    <TextView
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="29dp"
        android:text="Time"
        android:textAlignment="center"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_below="@+id/accel"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/unit3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginLeft="15dp"

        android:text="m/s"
        android:textAlignment="center"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_alignBaseline="@+id/velocity_num"
        android:layout_alignBottom="@+id/velocity_num"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/displace"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Displacement"
        android:textAlignment="center"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_marginTop="26dp"
        android:layout_below="@+id/time"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/time_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="time"
        android:textAlignmnt="textEnd"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_alignBaseline="@+id/time"
        android:layout_alignBottom="@+id/time"
        android:layout_alignStart="@+id/accel_num" />

    <TextView
        android:id="@+id/textView21"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"

        android:text="s"
        android:textAlignment="center"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_alignBaseline="@+id/time_num"
        android:layout_alignBottom="@+id/time_num"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/unit4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"

        android:text="m"
        android:textAlignment="center"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_alignBaseline="@+id/displace_num"
        android:layout_alignBottom="@+id/displace_num"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/displace_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="disp"
        android:textAlignment="textEnd"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_alignBaseline="@+id/displace"
        android:layout_alignBottom="@+id/displace"
        android:layout_alignEnd="@+id/time_num" />

    <TextView
        android:id="@+id/results"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left|top"
        android:layout_weight="1"
        android:text="Results"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"
        tools:textSize="30dp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/accel" />


</RelativeLayout>
