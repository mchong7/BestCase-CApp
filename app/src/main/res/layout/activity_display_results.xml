<?xml version="1.0" encoding="utf-8"?>



<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"



    xmlns:tools="http://schemas.android.com/tools"



    android:layout_width="match_parent"



    android:layout_height="match_parent"



    android:layout_centerHorizontal="false"



    android:layout_centerVertical="false"



    android:paddingBottom="@dimen/activity_vertical_margin"



    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:background="#94C9C7"


    android:paddingRight="@dimen/activity_horizontal_margin"

    android:paddingTop="@dimen/activity_vertical_margin"

    tools:context="bestcase.capp.DataInput">





    <TextView

        android:id="@+id/velocity_0"

        android:layout_width="wrap_content"

        android:layout_height="wrap_content"

        android:layout_alignParentStart="true"

        android:layout_below="@+id/results"

        android:layout_marginTop="19dp"

        android:text="Initial Velocity:"

        android:textAlignment="center"

        android:textAppearance="?android:attr/textAppearanceLarge"
        android:fontFamily="serif" />



    <Button

        android:id="@+id/back"

        android:layout_width="wrap_content"

        android:layout_height="wrap_content"

        android:text="BACK"

        android:layout_alignParentBottom="true"

        android:layout_alignParentEnd="true" />



    <TextView

        android:id="@+id/unit1"

        android:layout_width="wrap_content"

        android:layout_height="wrap_content"

        android:layout_marginLeft="15dp"

        android:text="m/s"

        android:textAlignment="center"

        android:textAppearance="?android:attr/textAppearanceLarge"

        android:layout_alignBaseline="@+id/velocity_0"

        android:layout_alignBottom="@+id/velocity_0"
        android:textSize="15dp"

        android:layout_alignParentEnd="true" />



    <TextView

        android:id="@+id/velocity_0_num"

        android:layout_width="wrap_content"

        android:layout_height="wrap_content"

        android:text="Initial Velocity"

        android:textAlignment="textStart"

        android:textAppearance="?android:attr/textAppearanceLarge"

        android:layout_alignBaseline="@+id/velocity_0"

        android:layout_alignBottom="@+id/velocity_0"


        android:layout_toLeftOf="@id/unit1"
        android:layout_marginEnd="10dp"/>



    <TextView

        android:id="@+id/velocity"

        android:layout_width="wrap_content"

        android:layout_height="wrap_content"

        android:text="Velocity:"

        android:textAlignment="center"

        android:textAppearance="?android:attr/textAppearanceLarge"

        android:layout_below="@+id/velocity_0"

        android:layout_alignParentStart="true"

        android:layout_marginTop="28dp"
        android:fontFamily="serif" />



    <TextView

        android:id="@+id/velocity_num"

        android:layout_width="wrap_content"

        android:layout_height="wrap_content"

        android:text="velocity"

        android:textAlignment="textStart"

        android:textAppearance="?android:attr/textAppearanceLarge"

        android:layout_alignBaseline="@+id/velocity"

        android:layout_alignBottom="@+id/velocity"

        android:layout_alignStart="@+id/velocity_0_num"
        android:layout_marginEnd="10dp"
         />



    <TextView

        android:id="@+id/accel"

        android:layout_width="wrap_content"

        android:layout_height="wrap_content"

        android:text="Acceleration:"

        android:textAlignment="center"

        android:textAppearance="?android:attr/textAppearanceLarge"

        android:layout_marginTop="27dp"

        android:layout_below="@+id/velocity"

        android:layout_alignParentStart="true"
        android:fontFamily="serif" />


    <TextView

        android:id="@+id/accel_num"

        android:layout_width="wrap_content"

        android:layout_height="wrap_content"

        android:text="Accel"

        android:textAlignment="textStart"

        android:textAppearance="?android:attr/textAppearanceLarge"

        android:layout_alignBaseline="@+id/accel"

        android:layout_alignBottom="@+id/accel"

        android:layout_alignStart="@+id/velocity_num"
        android:layout_marginEnd="10dp"/>



    <TextView

        android:id="@+id/time"

        android:layout_width="wrap_content"

        android:layout_height="wrap_content"

        android:layout_marginTop="29dp"

        android:text="Time:"

        android:textAlignment="center"

        android:textAppearance="?android:attr/textAppearanceLarge"

        android:layout_below="@+id/accel"

        android:layout_alignParentStart="true"
        android:fontFamily="serif" />



    <TextView

        android:id="@+id/unit3"

        android:layout_width="wrap_content"

        android:layout_height="wrap_content"



        android:layout_marginLeft="15dp"



        android:text="m/s"

        android:textAlignment="center"

        android:textAppearance="?android:attr/textAppearanceLarge"

        android:layout_alignBaseline="@+id/velocity_num"

        android:layout_alignBottom="@+id/velocity_num"
        android:textSize="15dp"

        android:layout_alignParentEnd="true" />



    <TextView

        android:id="@+id/displace"

        android:layout_width="wrap_content"

        android:layout_height="wrap_content"

        android:text="Displacement:"

        android:textAlignment="center"

        android:textAppearance="?android:attr/textAppearanceLarge"

        android:layout_marginTop="26dp"

        android:layout_below="@+id/time"

        android:layout_alignParentStart="true"
        android:fontFamily="serif" />



    <TextView

        android:id="@+id/time_num"

        android:layout_width="wrap_content"

        android:layout_height="wrap_content"

        android:text="time"

        android:textAlignment="textStart"

        android:textAppearance="?android:attr/textAppearanceLarge"

        android:layout_alignBaseline="@+id/time"

        android:layout_alignBottom="@+id/time"

        android:layout_alignStart="@+id/accel_num"
        android:layout_marginEnd="10dp"/>



    <TextView

        android:id="@+id/textView21"

        android:layout_width="wrap_content"

        android:layout_height="wrap_content"

        android:layout_marginLeft="15dp"



        android:text="s"

        android:textAlignment="center"

        android:textAppearance="?android:attr/textAppearanceLarge"

        android:layout_alignBaseline="@+id/time_num"

        android:layout_alignBottom="@+id/time_num"
        android:textSize="15dp"

        android:layout_alignParentEnd="true" />



    <TextView

        android:id="@+id/unit4"

        android:layout_width="wrap_content"

        android:layout_height="wrap_content"

        android:layout_marginLeft="15dp"



        android:text="m"

        android:textAlignment="center"

        android:textAppearance="?android:attr/textAppearanceLarge"

        android:layout_alignBaseline="@+id/displace_num"

        android:layout_alignBottom="@+id/displace_num"
        android:textSize="15dp"

        android:layout_alignParentEnd="true" />


    <TextView

        android:id="@+id/results"

        android:layout_width="wrap_content"

        android:layout_height="wrap_content"

        android:layout_gravity="left|top"

        android:layout_weight="1"

        android:text="Results"

        android:textAppearance="@style/TextAppearance.AppCompat.Title"

        tools:textSize="30dp"

        android:layout_alignParentTop="true"

        android:layout_toEndOf="@+id/accel" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/displace"
        android:layout_alignParentStart="true"
        android:layout_marginTop="35dp"
        android:id="@+id/explanation"
        android:layout_above="@+id/back"
        android:layout_centerHorizontal="true"
        android:layout_alignParentEnd="true"
        android:verticalScrollbarPosition="right"
        android:scrollbars="vertical"
        />

    <TextView

        android:id="@+id/unit2"

        android:layout_width="wrap_content"

        android:layout_height="30dp"

        android:layout_marginLeft="15dp"



        android:text="m/s^2"

        android:textAlignment="center"

        android:textAppearance="?android:attr/textAppearanceLarge"

        android:textSize="15dp"

        android:layout_alignBaseline="@+id/accel_num"
        android:layout_alignBottom="@+id/accel_num"
        android:layout_alignParentEnd="true"
        android:clickable="false" />

    <TextView

        android:id="@+id/displace_num"

        android:layout_width="wrap_content"

        android:layout_height="wrap_content"

        android:text="disp"

        android:textAlignment="textStart"

        android:textAppearance="?android:attr/textAppearanceLarge"

        android:layout_above="@+id/explanation"
        android:layout_alignEnd="@+id/time_num" />


</RelativeLayout>