<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#FF1617</item>
        <item name="colorPrimaryDark">#7F0B0B</item>
        <item name="colorAccent">#FF6363</item>
    </style>

    <style name="accel">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:inputType">numberDecimal|numberSigned</item>
        <item name="android:ems">10</item>
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_below">@+id/velocity_num</item>
        <item name="android:layout_alignParentEnd">true</item>
    </style>



</resources>
