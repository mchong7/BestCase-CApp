<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
   xmlns:tools="http://schemas.android.com/tools"
   android:layout_width="match_parent"
   android:layout_height="match_parent"
   android:layout_centerHorizontal="false"
   android:layout_centerVertical="false"
   android:background="@drawable/newback"
   android:paddingBottom="@dimen/activity_vertical_margin"
   android:paddingLeft="@dimen/activity_horizontal_margin"
   android:paddingRight="@dimen/activity_horizontal_margin"
   android:paddingTop="@dimen/activity_vertical_margin"
   tools:context="bestcase.capp.DataInput">

 <TextView
       android:id="@+id/results"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_alignParentTop="true"
       android:layout_centerHorizontal="true"
       android:layout_gravity="center_horizontal|top"
       android:layout_marginBottom="@dimen/activity_vertical_margin"
       android:layout_weight="1"
       android:fontFamily="sans-serif"
       android:text="@string/results"
     android:textSize="80sp"
       android:textAlignment="center"
       android:textAppearance="@android:style/TextAppearance.Material.Large" />
 <TextView
       android:id="@+id/velocity_0_num"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_below="@+id/results"
       android:layout_marginBottom="@dimen/activity_vertical_margin"
       android:text="@string/initial_velocity"
       android:textAlignment="textStart"
       android:textSize="40sp"
     android:layout_marginTop="20dp"
       android:textAppearance="?android:attr/textAppearanceLarge" />
 <TextView
       android:id="@+id/velocity_num"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_alignStart="@+id/velocity_0_num"
       android:layout_below="@+id/velocity_0_num"
       android:layout_marginBottom="@dimen/activity_vertical_margin"
       android:text="@string/final_velocity"
       android:textAlignment="textStart"
       android:textSize="40sp"
     android:layout_marginTop="20dp"
       android:textAppearance="?android:attr/textAppearanceLarge" />
 <TextView
       android:id="@+id/accel_num"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_below="@id/velocity_num"
       android:layout_marginBottom="@dimen/activity_vertical_margin"
       android:text="@string/acceleration"
       android:textAlignment="textStart"
       android:textSize="40sp"
     android:layout_marginTop="20dp"
       android:textAppearance="?android:attr/textAppearanceLarge" />
 <TextView
       android:id="@+id/time_num"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_alignStart="@+id/accel_num"
       android:layout_below="@id/accel_num"
       android:textSize="40sp"
       android:layout_marginBottom="@dimen/activity_vertical_margin"
       android:text="@string/time"
       android:textAlignment="textStart"
     android:layout_marginTop="20dp"
       android:textAppearance="?android:attr/textAppearanceLarge" />
 <TextView
       android:id="@+id/displace_num"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_alignEnd="@+id/time_num"
       android:layout_below="@+id/time_num"
       android:layout_marginBottom="@dimen/activity_vertical_margin"
       android:text="@string/displacement"
     android:textSize="40sp"
       android:textAlignment="textStart"
     android:layout_marginTop="20dp"
       android:textAppearance="?android:attr/textAppearanceLarge" />

 <Button
     android:id="@+id/explain"
     style="@android:style/Widget.DeviceDefault.Button.Small"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:layout_below="@+id/displace_num"
     android:layout_centerHorizontal="true"
     android:layout_marginTop="33dp"
     android:elevation="0dp"
     android:textSize="50sp"
     android:text="Explain?" />

</RelativeLayout>